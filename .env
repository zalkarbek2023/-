# Конфигурация приложения
APP_HOST=0.0.0.0
APP_PORT=8000
MAX_FILE_SIZE=10485760  # 10MB в байтах
UPLOAD_DIR=./uploads
SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff

# OCR настройки
OCR_TIMEOUT=300  # 5 минут в секундах
ENABLE_PADDLE=true
ENABLE_MARKER=true   # Модели загрузятся автоматически при первом запуске
ENABLE_MINERU=true   # Модели загружены в /tmp/models/
ENABLE_DEEPSEEK=false  # Требует GPU и vLLM
ENABLE_OLM=false  # OLMoCR временно отключен (требует GPU сервер)
PADDLE_USE_GPU=false  # Установите true для использования GPU
OLMOCR_API_SERVER=  # Оставьте пустым для локального режима или укажите http://server:8000/v1

# Логирование
LOG_LEVEL=INFO
